{
  "release-type": "node",
  "force-tag-creation": true,
  "pull-request-header": "Automated Release PR",
  "group-pull-request-title-pattern": "Release: v${version}",
  "bootstrap-sha": "a81baa2a053cc1ca54f728f4cf4a2b8aaca14a45",
  "packages": {
    ".": {
      "component": "main",
      "skip-changelog": true,
      "skip-github-release": true
    },
    "core": {
      "changelog-path": "CHANGELOG.md",
      "component": "adk",
      "extra-files": [
        {
          "path": "src/version.ts",
          "type": "generic"
        }
      ]
    },
    "dev": {
      "changelog-path": "CHANGELOG.md",
      "component": "devtools",
      "extra-files": [
        {
          "path": "src/version.ts",
          "type": "generic"
        }
      ]
    }
  },
  "plugins": [
    {
      "type": "node-workspace",
      "merge": false
    },
    {
      "type": "linked-versions",
      "groupName": "adk",
      "components": [
        "main",
        "adk",
        "devtools"
      ]
    }
  ],
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json"
}
